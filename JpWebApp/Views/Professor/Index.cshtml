@{
    ViewData["Title"] = "Lista De Professor";
}

@if (TempData["MsgErro"] != null)
{
    <div class="alert-danger">
        @TempData["MsgErro"]
    </div>
}

@if (TempData["cadastroOK"] != null)
{
    <div class="alert-sucess">
        @TempData["cadastroOK"]
    </div>
}


<div>
    <form method="get" asp-controller="Professor" asp-action="Index">
        <input type="text" name="buscar" placeholder="Buscar professor..." class="form-control" style="width:300px; display:inline-block;" />
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </form>

</div>


@model IEnumerable<Professor>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome Completo</th>
            <th scope="col">Disciplina</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.NomeCompleto</td>
                    <td>@item.Disciplina</td>
                    <td>@item.Email</td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Professor" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Professor" asp-action="Excluir" asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }

        }

    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" type="button" asp-controller="Professor" asp-action="Adicionar"> Adicionar Professor</a>
    <a class="btn btn-primary" type="button" asp-controller="Home" asp-action="Index">Voltar</a>
</div>