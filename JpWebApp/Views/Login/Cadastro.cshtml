@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Pagina de Cadastro";
}

@model Usuario

@if (TempData["MsgErro"] != null)
{
    <div class="alert-danger">
        @TempData["MsgErro"]
    </div>
}


 <h1 class="display-4">Pagina de Cadastro:</h1>


<form asp-controller="Login" asp-action="CadastrarUsuario" method="post">

    <div class="mb-3 col-md-4">
        <label class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control">
    </div>

    <div class="mb-3 col-md-2">
        <label class="form-label">Senha</label>
        <input type="text" asp-for="Senha" class="form-control ">
    </div>

    <div class="mb-3 col-md-4">
        <p>Tipo:</p>
        <input type="radio" asp-for="Perfil" value="2" checked> <label class="form-label">Usuario</label>
        <input type="radio" asp-for="Perfil" value="1"> <label class="form-label">Admin</label>
        <p style="color:blue;">Aqui é permitido selecionar o tipo de usuario para permitir testes no sistema.</p>
    </div>


    <div class="mb-3 col-md-4">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a class="btn btn-primary" type="button" asp-controller="Login" asp-action="Index"> Voltar</a>
    </div>
</form>